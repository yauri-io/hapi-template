    "@hapi/good-squeeze": "^6.0.0",
    "@hapi/hapi": "^20.2.2",
    "@hapi/hoek": "^9.2.1",
    "bluebird": "^3.7.2",
    "dotenv": "^16.0.0",
    "hapi-pino": "^9.3.0",
    "joi": "^17.6.0",
    "pino-pretty": "^7.6.1"
  },
  "devDependencies": {
    "@hapi/code": "^8.0.7",
    "@hapi/lab": "^24.7.0",
