    "dev": "nodemon index.js",
    "test": "lab test -v",
    "lint": "standard --fix ./",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yauri-io/hapi-template.git"
  },
  "keywords": [
    "hapijs"
  ],
  "author": "yauri-io",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/yauri-io/hapi-next/issues"
  },
  "lint-staged": {
    "*.js": [
      "standard --fix"
    ]
  },
  "husky": {
